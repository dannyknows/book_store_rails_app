
<%= render 'nav' %>

<div>
  <% @books.each do |book| %>
    <div style="background-color: #a0c0e0;">

      <%= link_to book.title, book_path(book.id)%>

      <% book.authors.each do |author| %>
        <p><%= author.name %></p>
      <% end %>

      <% book.genres.each do |genre| %>
        <p><%= genre.name %></p>
      <% end %>

    </div>
  <% end %>
</div>
